<?xml version="1.0" encoding="UTF-8"?>  <!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
        "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="blog">

    <typeAlias alias="blogDO" type="net.xiaocun.model.Blog"/>

    <sql id="ALL_FIELDS">
        <![CDATA[
        id,
        user_id,
        bind_id,
        match_id,
        match_type,
        context,
        status,
        action,
        gmt_create,
        gmt_modified
        ]]>
    </sql>

    <resultMap id="OrderActionResult" class="OrderActionDO">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="bindId" column="bind_id"/>
        <result property="matchId" column="match_id"/>
        <result property="matchType" column="match_type"/>
        <result property="context" column="context"/>
        <result property="status" column="status"/>
        <result property="action" column="action"/>
        <result property="gmtModified" column="gmt_modified"/>
        <result property="gmtCreated" column="gmt_create"/>
    </resultMap>

    <select id="listByMatchIdAndType" parameterClass="java.util.Map" resultMap="OrderActionResult">
        SELECT
        <include refid="ALL_FIELDS"/>
        FROM `bind_order_action`
        WHERE  match_id = #matchId#
        AND match_type = #matchType#
        AND ACTION = #action#
    </select>

    <select id="queryById" parameterClass="java.lang.Long" resultClass="blogDO">
        SELECT * FROM user where id = #id#
    </select>

    <select id="findAll" parameterClass="java.lang.Long" resultClass="net.xiaocun.model.Blog">
        SELECT * FROM user
    </select>

    <select id="queryByName" parameterClass="java.lang.String" resultClass="net.xiaocun.model.Blog">
        SELECT * FROM user where name = #name#
    </select>

    <delete id="deleteById" parameterClass="long">
        DELETE FROM user WHERE  id = #id#
    </delete>

    <update id="update" parameterClass="net.xiaocun.model.Blog">
        UPDATE user SET name = #name#, age = #age#, salary = #salary#
        WHERE  id = #id#
    </update>

    <insert id="insert" parameterClass="net.xiaocun.model.Blog">
        INSERT INTO user(name, age, salary)
        values (#name#, #age#, #salary#)

        <selectKey resultClass="long" keyProperty="id">
            select last_insert_id() as id
        </selectKey>
    </insert>

    <select id="countUser" resultClass="int">
        SELECT COUNT(*) FROM user
    </select>


</sqlMap>
